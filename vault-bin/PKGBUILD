pkgname=vault-bin
pkgver=0.3.1
pkgrel=1
pkgdesc="A tool for managing secrets."
url='http://vaultproject.io/'
arch=('i686' 'x86_64')
license=('MPL')

source_i686=("https://dl.bintray.com/mitchellh/vault/vault_0.3.1_linux_386.zip")
source_x86_64=("https://dl.bintray.com/mitchellh/vault/vault_0.3.1_linux_amd64.zip")
sha256sums_i686=('2e09df75efed43c1f29c1be020ad49d712a6eb5b2413961aea7d5ed47b982f36')
sha256sums_x86_64=('4005f0ae1bd88ad2676859430209129ed13bc3ade6b64fcf40cc3a6d4d9469e7')

package() {
    install -d ${pkgdir}/usr/bin
    install -Dm755 ${srcdir}/vault ${pkgdir}/usr/bin
}
